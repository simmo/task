{
  "name": "@simmo/task",
  "version": "0.0.1",
  "description": "JavaScript utility that provides a consistent, clean return from promises. Particularly helpful when using await/async.",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "typings/index.d.ts",
  "typings": "typings/index.d.ts",
  "repository": "github:simmo/task",
  "author": "Mike Simmonds (https://simmo.me)",
  "license": "MIT",
  "private": false,
  "keywords": [
    "async",
    "await",
    "promise",
    "catch",
    "error"
  ],
  "files": [
    "cjs",
    "esm",
    "typings"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "scripts": {
    "test": "jest",
    "prepublishOnly": "npm run build",
    "lint": "eslint --ext .tsx,.ts ./src",
    "build:cjs": "tsc -m commonjs --outDir cjs",
    "build:es": "tsc -m esNext --outDir esm",
    "build": "yarn build:cjs --declaration --declarationDir typings & yarn build:es"
  },
  "devDependencies": {
    "@types/jest": "^24.0.25",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "tiny-invariant": "^1.0.6"
  }
}
