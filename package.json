{
  "name": "@simmo/task",
  "version": "0.0.1",
  "description": "JavaScript utility that provides a consistent, clean return from promises. Particularly helpful when using await/async.",
  "main": "task.cjs.js",
  "module": "task.es.js",
  "repository": "github:simmo/task",
  "author": "Mike Simmonds (https://simmo.me)",
  "license": "MIT",
  "private": false,
  "keywords": [
    "async",
    "await",
    "promise",
    "catch",
    "error"
  ],
  "files": [
    "task.cjs.js",
    "task.es.js"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jest": true
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "loose": true,
          "modules": false
        }
      ]
    ],
    "env": {
      "test": {
        "presets": [
          "@babel/preset-env"
        ]
      }
    },
    "plugins": [
      "dev-expression"
    ]
  },
  "scripts": {
    "test": "jest",
    "build": "node ./scripts/build.js",
    "prepublishOnly": "npm run build",
    "lint": "eslint src",
    "clean": "git clean -fdX ."
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-rc.1",
    "@babel/preset-env": "^7.0.0-rc.1",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-plugin-dev-expression": "^0.2.1",
    "eslint": "^6.8.0",
    "jest": "^24.9.0",
    "rollup": "^1.27.14",
    "rollup-plugin-babel": "^4.0.0-beta.8",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0"
  },
  "dependencies": {
    "invariant": "^2.2.4"
  }
}
